<% unless current_user?(@user) %>
  <div id="follow_form" class="col-xs-offset-11">
    <% if current_user.following?(@user) %>
      <%=  form_for(current_user.relationships.find_by(followed_id: @user),
                                    html: { method: :delete }) do |form|%>
        <%= form.submit 'Unfollow', class: 'btn btn-large' %>
      <% end %>
    <% else %>
      <%=  form_for(current_user.relationships.build(followed_id: @user.id)) do |form|%>
        <div><%= form.hidden_field :followed_id %></div>
        <%= form.submit 'Follow', class: 'btn btn-large btn-primary' %>
      <% end %>
    <% end %>
  </div>
<% end %>