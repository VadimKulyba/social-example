<%= form_for(@micropost) do |form| %>
  <%= render 'shared/error_messages_post', object: form.object %>
  <div class="center col-md-10 col-md-offset-1">
    <input class="hide" id="hd-1" type="checkbox" >
    <label for="hd-1">Wand to do post?</label>
    <div>
      <div class="form-group col-md-9">
        <%= form.text_field( :content, placeholder: 'Posting ...', class: 'form-control') %>
      </div>
      <div class="form-group col-md-3">
        <%= form.submit('Post', class: 'btn btn-large btn-block btn-success') %>
      </div>
    </div>
  </div>
<% end %>
