<% if @micropost.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      The form contact <%= pluralize(@micropost.errors.count, 'error') %>
    </div>
    <ul>
      <% @micropost.errors.full_messages.each do |m| %>
        <li>*<%= m %></li>
      <% end %>
    </ul>
  </div>
<% end %>