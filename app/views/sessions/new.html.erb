<% provide(:title, "Sign in") %>
<h1>Sign in</h1>

<div class="row center">
  <div class="col-md-4 col-md-offset-4">
    <p>Please enter your login and password</p>
    <%= form_for(:session, url: sessions_path) do |form| %>
      <div class="form-group">
        <%= form.text_field( :email, placeholder: 'Email', class: 'form-control') %>
      </div>
      <div class="form-group">
        <%= form.password_field( :password, placeholder: 'Password', class: 'form-control') %>
      </div>
      <%= form.submit('Sign in',class: 'btn btn-large btn-success') %>
    <% end %>
    <br>
    <p>New user? <%= link_to "Sign up now!", new_user_path %></p>
  </div>
</div>