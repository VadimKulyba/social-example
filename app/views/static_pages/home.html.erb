<% provide(:title, 'Home') %>

<% if signed_in? %>
  <div class="row">
    <div class="col-md-4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
    </div>
    <div class="col-md-8">
      <section>
        <%= render 'shared/micropost_form' %>
        <h3 class="center">Micropost Feed</h3>
        <% if @feed_items.any? %>
          <ol class="microposts">
            <%= render partial: 'shared/feed_item', collection: @feed_items %>
          </ol>
          <%= will_paginate @feed_items %>
        <% end %>
      </section>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
  <h1>Welcome to the Sample App</h1>

  <h3 class="gray">
    This is the home page for the
    <a href="http://railstutorial.org/">Ruby on Rails Tutorial</a>
    sample application.
  </h3>

  <%= link_to "Sing up now!", new_user_path, class: "btn btn-large btn-primary" %>
  <div>
    <h3 class="gray">Also you authorize from:</h3>
    <%= link_to image_tag("vkontakte.png", alt: "Vk"),
                user_vkontakte_omniauth_authorize_path %>
    or
    <%= link_to image_tag("facebook.png", alt: "Facebook"),
                '#' %>
  </div>
  <br>
  <div class="center">
    <%= link_to image_tag("rails.png", alt: "Rails"),
                'http://rubyonrails.org/' %>
  </div>
</div>

<% end %>