<% provide(:title, @title) %>

<div class="row">
  <aside class="col-md-4">
    <section>
      <%= render 'shared/user_info' %>
    </section>
    <section>
      <%= render 'shared/stats' %>

      <% if @users.any? %>
        <div class="user_avatars">
          <% @users.each do |user| %>
            <a href="<%= user_path(user)%>">
              <img src="<%= avatar_for(user, 52) %>" class="img-circle">
            </a>
          <% end %>
        </div>
      <% end %>
    </section>
  </aside>
  <div class="col-md-8">
    <h3 class="center"><%= @title %></h3>
    <% if @users.any? %>
      <%= render 'shared/users' %>
      <%= will_paginate %>
    <% end %>
  </div>
</div>

